{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./out/wasm"
    ]
  },
  "include": [
    "src",
    "out/wasm/wasm.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
